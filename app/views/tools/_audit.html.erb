<tr>
  <td>
    <%= audit.created_at %>
  </td>
  <td>
    <%= audit.try(:user).try(:email) %>
  </td>
  <td>
    <%= audit.remote_address %>
  </td>
  <td>
    <%= audit.action.humanize %>
  </td>
  <td>
    <%= audit.auditable_type %>
  </td>
  <td class="text-right">
    <%= facture_link_factory(audit) %>
  </td>
  <td>
    <%= sanitize prettify(audit).join('<br>') %>
  </td>
</tr>
