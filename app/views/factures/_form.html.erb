<%= bootstrap_form_with(model: facture, local: true) do |form| %>
  <% if facture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(facture.errors.count, "error") %> prohibited this facture from being saved:</h2>

      <ul>
        <% facture.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-5">
    <%= form.file_field :scan %>

    <% unless facture.new_record? %>
      <%= form.select(:etat, Facture.etats.keys.to_a, class: "form-control") %>
    <% end %>

    <%= form.select(:anomalie, Facture.anomalies.keys.to_a, class: "form-control") %>
    <%= form.number_field :num_chrono, required: true  %>
    <%= form.text_field :société, required: true  %>
    <%= form.text_field :par, label: 'PAR' %>
    <%= form.number_field :montantHT, step: :any, label: "Montant € HT" %>
  </div>

  <div class="col-sm-12">
    <h3>Cibles</h3>
    <%= form.fields_for :cibles do |cible_form| %>
      <div class="row">
        <div class="col-sm-1"><%= cible_form.select(:opérateur, ['OU','ET']) %></div>
        <div class="col"><%= cible_form.text_field :email %></div>
        <div class="col"><%= cible_form.check_box :_destroy, label: "Supprimer ?" %></div>
      </div>
    <% end %>

    <div class="actions">
      <%= form.submit "Enregistrer", class: "btn btn-success" %>
    </div>
  </div>

<% end %>
