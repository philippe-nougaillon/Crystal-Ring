<p>
  <h2>
    #<%= @facture.num_chrono %>
  </h2>
</p>

<div class="row">
  <div class="col">
    <p>
      <%= image_tag @facture.scan, width: "500px" %>
    </p>
  </div>
  <div class="col">
    <p>
      <strong>Etat:</strong>
      <span class="badge badge-pill <%= @facture.style %>"><%= @facture.etat.humanize %></span>    
    </p>

    <p>
      <strong>Anomalie:</strong>
      <%= @facture.anomalie.humanize %>
    </p>

    <p>
      <strong>Société:</strong>
      <%= @facture.société %>
    </p>

    <p>
      <strong>Cible:</strong>
      <%= @facture.cible %>
    </p>

    <p>
      <strong>PAR:</strong>
      <%= @facture.par %>
    </p>

    <p>
      <strong>Montant € HT:</strong>
      <%= @facture.montantHT %>
    </p>


    <%= link_to 'Editer', edit_facture_path(@facture) %> |
    <%= link_to 'Retour', factures_path %>

    <p>
      <% if @facture.etat == "envoyée" %>
        <br>
        <%= link_to "Validation", facture_validation_path(@facture) %>
      <% end %>
    </p>

  </div>
</div>

<br />
<br />

<h3>Audit trail</h3>
<p>
  <table class="table">
    <%= render partial: 'tools/audit', collection: @facture.audits.reorder(Arel.sql("audits.id DESC")) %>
  </table>
</p>
